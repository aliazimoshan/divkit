{
  "description": "Line height of single-line text with size span",
  "platforms": [
    "android",
    "ios",
    "web"
  ],
  "templates": {
    "text_block": {
      "type": "text",
      "width": {
        "type": "wrap_content"
      },
      "paddings": {
        "left": 4,
        "top": 4,
        "right": 4,
        "bottom": 4
      },
      "background": [
        {
          "type": "solid",
          "$color": "background_color"
        }
      ],
      "font_size": 14
    }
  },
  "card": {
    "log_id": "line_height_with_size_range",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "vertical",
          "items": [
            {
              "type": "text_block",
              "background_color": "#F8F8F8",
              "text": "Lorem ipsum",
              "ranges": [
                {
                  "start": 0,
                  "end": 5,
                  "font_size": 24,
                  "font_weight": "bold"
                }
              ]
            },
            {
              "type": "text_block",
              "background_color": "#E0E0E0",
              "line_height": 16,
              "text": "Lorem ipsum",
              "ranges": [
                {
                  "start": 0,
                  "end": 5,
                  "font_size": 24,
                  "font_weight": "bold"
                }
              ]
            },
            {
              "type": "text_block",
              "background_color": "#F8F8F8",
              "line_height": 16,
              "text": "Lorem ipsum",
              "ranges": [
                {
                  "start": 0,
                  "end": 5,
                  "font_size": 24,
                  "font_weight": "bold",
                  "line_height": 28
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
